{
  "version": 2,
  "builds": [
    { "src": "api/server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/server.js" },
    { "src": "/(.*\\.(css|js|jpg|png|gif|ico|svg|html))", "dest": "/public/$1" },
    { "src": "/", "dest": "api/server.js" }
  ]
}
