{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/public/$1" },
    { "src": "/(.*\\.(css|js|jpg|png|gif|ico|svg|html))$", "dest": "/public/$1" },
    { "src": "/(.*)", "dest": "server.js" }
  ]
}
